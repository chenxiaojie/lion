    <!--</bean>-->

    <!-- 配置数据源 -->
    <bean id="lionDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="${driverClassName}"/>
        <property name="url" value="${url}"/>
        <property name="username" value="${username}"/>
        <property name="password" value="${password}"/>
    </bean>

    <bean id="lionSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="lionDataSource"/>
        <!--<property name="configLocation" value="mybatis/mybatis.xml"></property>-->
        <!--<property name="mapperLocations" value="classpath*:mybatis/mappers/*.xml"></property>-->
